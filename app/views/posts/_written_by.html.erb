<% if post.metadata[:author] %>
  <% author = Static::AUTHORS[post.metadata[:author].to_sym] %>
  <% if author %>
    <p class="written">
      <%= t "blog.written_html",
        href: "https://twitter.com/#{author[:twitter]}",
        author: author[:name],
        date: l(post.date, format: date_format )
      %>
    </p>
  <% end %>
<% end %>
